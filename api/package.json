{
  "name": "api",
  "version": "0.0.1",
  "description": "Pave Api",
  "main": "server.js",
  "engines": {
    "node": "20.13.1"
  },
  "scripts": {
    "start:production": "NODE_ENV=production npm run ups:production && NODE_ENV=production npx next build && NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node --inspect --trace-warnings server.js -e less,js,css,json,hbs",
    "start:generic": "npm install --ignore-scripts=false && sequelize db:migrate && node server.js",
    "test": "IS_TEST=1 NODE_ENV=development mocha --exit --timeout 15000 -R spec server/tests/**/*.js",
    "ups": "sequelize db:migrate && sequelize db:seed:all",
    "downs": "sequelize db:migrate:undo:all",
    "down": "sequelize db:migrate:undo",
    "lint": "npx eslint server/**/*.js",
    "docker-compose:up": "cd build/docker && docker-compose up -d",
    "docker-compose:down": "cd build/docker && docker-compose down"
  },
  "repository": "https://bitbucket.org/pave/api",
  "author": "Mervin Tan <mervin@yourpave.com>",
  "dependencies": {
    "@aws-crypto/sha256-js": "^5.2.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/multipart": "^8.2.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.4",
    "@hubspot/api-client": "^11.1.0",
    "@sentry/node": "^7.116.0",
    "@smithy/protocol-http": "^4.0.0",
    "@smithy/signature-v4": "^3.0.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "aws-sdk": "^2.1625.0",
    "axios": "^1.7.2",
    "bluebird": "^3.7.2",
    "carbone-sdk": "^1.6.0",
    "cheerio": "^1.0.0",
    "crypto": "^1.0.1",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.6.0",
    "fastify": "^4.27.0",
    "form-data": "^4.0.0",
    "geoip-lite": "^1.4.10",
    "googleapis": "^110.0.0",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "he": "^1.2.0",
    "jimp": "^0.22.12",
    "jsforce": "^1.11.1",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.11.1",
    "luxon": "^3.4.4",
    "mailgun-js": "^0.22.0",
    "newrelic": "^8.17.0",
    "next": "^10.2.3",
    "nextjs": "^0.0.3",
    "mailgun.js": "^10.2.1",
    "mime": "^2.6.0",
    "mime-types": "^2.1.35",
    "moment": "^2.30.1",
    "mysql2": "^3.9.7",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.13",
    "pusher": "^5.2.0",
    "quickchart-js": "^3.1.3",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "stripe": "^12.18.0",
    "transloadit": "3.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
