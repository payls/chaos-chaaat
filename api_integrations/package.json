{
  "name": "api_integrations",
  "version": "0.0.1",
  "description": "Pave Integrations Api",
  "main": "server.js",
  "engines": {
    "node": "14.0.0"
  },
  "scripts": {
    "start:production": "NODE_ENV=production npm run ups:production && NODE_ENV=production npx next build && NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development nodemon --inspect --trace-warnings server.js -e less,js,css,json,hbs",
    "start:generic": "npm install && node server.js",
    "test": "IS_TEST=1 NODE_ENV=development mocha --exit --timeout 15000 -R spec server/tests/**/*.js",
    "ups": "sequelize db:migrate && sequelize db:seed:all",
    "downs": "sequelize db:migrate:undo:all",
    "down": "sequelize db:migrate:undo",
    "apidoc": "apidoc -i ./server/routes/ -o ./public/docs/api/",
    "lint": "npx eslint server/**/*.js",
    "docker-compose:up": "cd build/docker && docker-compose up -d",
    "docker-compose:down": "cd build/docker && docker-compose down",
    "load": "node -r dotenv/config server.js"
  },
  "repository": "https://bitbucket.org/pave/api_integrations",
  "author": "Gaurav Harchwani <gaurav@yourpave.com>",
  "dependencies": {
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/csrf-protection": "^4.0.0",
    "@fastify/rate-limit": "^6.0.0",
    "@sentry/node": "^7.68.0",
    "amqp-connection-manager": "^4.1.6",
    "amqplib": "^0.10.3",
    "apidoc": "^0.25.0",
    "app-root-path": "^3.0.0",
    "aws-sdk": "^2.824.0",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.2",
    "chai": "^4.2.0",
    "crypto": "^1.0.1",
    "fastify": "^3.9.2",
    "fastify-cors": "^4.1.0",
    "fastify-helmet": "^5.1.0",
    "fastify-jwt": "^2.2.0",
    "fastify-multipart": "^4.0.6",
    "fastify-nextjs": "^5.0.4",
    "fastify-rate-limit": "^4.1.0",
    "fastify-static": "^3.3.1",
    "google-auth-library": "^6.1.4",
    "hubspot": "^2.3.14",
    "jsforce": "^1.11.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "mime": "^2.4.7",
    "mime-types": "^2.1.30",
    "mocha": "^8.2.1",
    "moment": "^2.29.1",
    "mysql2": "^2.2.2",
    "newrelic": "^8.14.1",
    "next": "^10.0.5",
    "node-cache": "^5.1.2",
    "query-string": "^7.0.1",
    "react": "^16.13.1",
    "react-bootstrap": "^1.4.3",
    "react-cropper": "^2.1.4",
    "react-dom": "^16.13.1",
    "react-table": "^7.5.2",
    "react-toastify": "^6.2.0",
    "salesforce-webhooks": "^1.1.9",
    "sequelize": "^6.3.5",
    "sequelize-cli": "^6.2.0",
    "sweetalert2": "^10.13.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-chai": "^0.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.4.1"
  },
  "apidoc": {
    "name": "Pave Integrations API",
    "version": "1.0.0",
    "description": "This is the API documentation for Pave Integrations Platforms.",
    "title": "Pave Integrations API",
    "url": "https://localhost:3113"
  }
}
